<table class="table table-hover">
  <thead>
    <tr>
      <th>#</th>
      <th>Image</th>
      <th>Description</th>
      <th>Price</th>
      <th></th>
    </tr>
  </thead>
  <tbody>
    <% @ads.each do |ad| %>
      <tr>
        <th scope="row"><%= ad.id %></th>
        <td> <%= image_tag  ad.company_part.part.picture(:thumb) %></td>
        <td><%= ad.title %></td>
        <td><%= humanized_money_with_symbol ad.price %></td>
        <td>          
            <%= link_to edit_site_profile_ad_path(ad), class:"btn btn-primary btn-sm" do %>
              <span class="glyphicon glyphicon-pencil" aria-hidden="true"></span>
            <% end %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

