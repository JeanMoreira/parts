
<h1 class="panel panel-header">
  <%= action_message %>
</h1>
<% if @part.errors.any? %>
<% @part.errors.full_messages.each do |message| %>
<div class="alert alert-danger alert-dismissable">
  <button type="button" class="close" data-dismiss="alert" aria-hidden="true">Ã—</button>
  <%= message %>.
</div>
<% end %>
<% end %>
<%= form_for([:site, :profile, @part], html: { multipart: true })  do |f| %>

<div class="panel panel-default">
  <div class="panel-heading">

  </div>
  <div class="panel-body">
    <div class="col-lg-6">
      <div class="form-group">
        <label>Car</label>
        <%= f.collection_select :car_id, Car.all, :id, :maker, {prompt: "Select a category"}, {class: "form-control" }  %>
      </div>
      <div class="form-group">
        <label>Category</label>
        <%= f.collection_select :category_id, Category.all, :id, :description, {prompt: "Select a category"}, {class: "form-control"} %>
      </div>
      <div class="form-group">
        <label>description</label>
        <%= f.text_field :description, class:"form-control" %>

      </div>

      <div class="row">
        <div class="col-xs-6">
          <div class="form-group">
            <%= f.label :picture %> <br>
            <% if @part.picture.present? %>
              <%= image_tag @part.picture(:medium), class: "img-thumbnail" %>
            <% end %>
            <%= f.file_field :picture, class: "btn" %>
          </div>
        </div>
      </div>

      <button type="submit" class="btn btn-default">Salvar</button>
    </div>
  </div>
</div>
<% end %>

</div>








