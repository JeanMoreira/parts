<p id="notice"><%= notice %></p>

<h1>Solds</h1>

<table>
  <thead>
    <tr>
      <th>Company part</th>
      <th>Member</th>
      <th>Price cents</th>
      <th>Quantity</th>
      <th>Promotion</th>
      <th>Status</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @solds.each do |sold| %>
      <tr>
        <td><%= sold.company_part %></td>
        <td><%= sold.member %></td>
        <td><%= sold.price_cents %></td>
        <td><%= sold.quantity %></td>
        <td><%= sold.promotion %></td>
        <td><%= sold.status %></td>
        <td><%= link_to 'Show', sold %></td>
        <td><%= link_to 'Edit', edit_sold_path(sold) %></td>
        <td><%= link_to 'Destroy', sold, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

