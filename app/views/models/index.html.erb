
<h1 class="page-header">Model</h1>
<div class="panel panel-default">
  <div class="panel-heading">
    LISTANDO MODELOS
    <%= link_to new_model_path, class:"btn btn-success btn-circle pull-right", style:"margin-top: -5px" do %>
    <i class="fa fa-plus"></i>
    <% end %>
  </div>
  <!-- /.panel-heading -->
  <div class="panel-body">
    <div class="table-responsive">
      <table class="table table-striped table-bordered table-hover">
        <thead>
          <tr>
            <th>#</th>
            <th>Description</th>
            <th colspan="3"></th>
          </tr>
        </thead>
        <tbody>
          <% @models.each do |model| %>
         <tr>
          <td style="width: 40px"><%= model.id %></td>
          <td><%= model.description %></td>
         
          <td style="width: 150px"><%= link_to edit_part_path(model), class:"btn btn-primary btn-circle" do %>
            <i class="fa fa-edit"></i>
            <% end %>
            
            <%= link_to part_path(model), method: :delete, class: "btn btn-danger btn-circle", data:{confirm: t('messages.confirm_with', item: model.description)} do %>
            <i class="fa fa-minus"></i>
            <% end %>

          </tr>
          <% end %>

        </tbody>
      </table>
    </div>
    <!-- /.table-responsive -->
  </div>
  <!-- /.panel-body -->
</div>
<br>
</div>
<!-- /.col-lg-12 -->





