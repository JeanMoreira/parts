<h1 class="page-header">PEÇAS</h1>
<div class="panel panel-default">


  <div class="panel-heading">
    LISTANDO PEÇAS
    <%= link_to new_part_path, class:"btn btn-success btn-circle pull-right", style:"margin-top: -5px" do %>
    <i class="fa fa-plus"></i>
    <% end %>
  </div>
  <!-- /.panel-heading -->
  <div class="panel-body">
    <div class="table-responsive">
      <table class="table table-striped table-bordered table-hover">
        <thead>
          <tr>
            <th>#</th>
            <th>Imagem</th>
            <th>Car</th>
            <th>Description</th>
            <th>Category</th>
            <th colspan="3"></th>
          </tr>
        </thead>
        <tbody>
         <% @parts.each do |part| %>
         <tr>
          <td style="width: 40px"><%= part.id %></td>
          <td><%= image_tag part.picture(:thumb) %></td>
          <% if (part.car.nil?) %>
            <td><%= 'SEM CARRO' %></td>
          <% else %>
            <td><%= part.car.model.description %></td>
          <% end %>  
          <td><%= part.description %></td>
          <td><%= part.category.description %></td>

          <td style="width: 150px"><%= link_to edit_part_path(part), class:"btn btn-primary btn-circle" do %>
            <i class="fa fa-edit"></i>
            <% end %>
            
            <%= link_to part_path(part), method: :delete, class: "btn btn-danger btn-circle", data:{confirm: t('messages.confirm_with', item: part.description)} do %>
            <i class="fa fa-minus"></i>
            <% end %>

          </tr>
          <% end %>

        </tbody>
      </table>
    </div>
    <!-- /.table-responsive -->
  </div>
  <!-- /.panel-body -->
</div>
<br>
</div>
<!-- /.col-lg-12 -->

