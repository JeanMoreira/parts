<h1>Listando An√∫ncios</h1>
<div class="panel panel-default">


  <div class="panel-heading">
    LISTANDO ANUNCIOS
    <%= link_to new_ad_path, class:"btn btn-success btn-circle pull-right", style:"margin-top: -5px" do %>
    <i class="fa fa-plus"></i>
    <% end %>
  </div>
  <!-- /.panel-heading -->
  <div class="panel-body">
    <div class="table-responsive">
      <table class="table table-striped table-bordered table-hover">
        <thead>
          <tr>
            <th>#</th>
            <th>Image</th>
            <th>Description</th>
            <th>Price</th>
            <th colspan="3"></th>
          </tr>
        </thead>
        <tbody>
         <% @ads.each do |ads| %>
         <tr>
            <th scope="row"><%= ad.id %></th>
            <td> <%= image_tag  ad.company_part.part.picture(:thumb) %></td>
            <td><%= ad.title %></td>
            <td><%= humanized_money_with_symbol ad.price %></td>
            <td>          
                <%= link_to edit_site_profile_ad_path(ad), class:"btn btn-primary btn-sm" do %>
                  <span class="glyphicon glyphicon-pencil" aria-hidden="true"></span>
                <% end %>
            </td>
          </tr>
          <% end %>

        </tbody>
      </table>
    </div>
    <!-- /.table-responsive -->
  </div>
  <!-- /.panel-body -->
</div>
<br>
</div>
<!-- /.col-lg-12 -->

