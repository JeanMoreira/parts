  <h1 class="page-header">Empresas</h1>
  <div class="panel panel-default">


    <div class="panel-heading">
      LISTANDO EMPRESAS
      <%= link_to new_company_path, class:"btn btn-success btn-circle pull-right", style:"margin-top: -5px" do %>
      <i class="fa fa-plus"></i>
      <% end %>
    </div>
    <!-- /.panel-heading -->
    <div class="panel-body">
      <div class="table-responsive">
        <table class="table table-striped table-bordered table-hover">
          <thead>
            <tr>
              <th>Name</th>
              <th>Cnpj</th>
              <th colspan="2"></th>
            </tr>
          </thead>

          <tbody>
            <% @companies.each do |company| %>
              <tr>
                <td><%= company.name %></td>
                <td><%= company.cnpj %></td>
                <td style="width: 150px"><%= link_to edit_company_path(company), class:"btn btn-primary btn-circle" do %>
                  <i class="fa fa-edit"></i>
                  <% end %>
                  <%= link_to company_path(company), method: :delete, class: "btn btn-danger btn-circle", data:{confirm: t('messages.confirm_with', item: company.name)} do %>
                  <i class="fa fa-minus"></i>
                  <% end %>
                </tr>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
      <!-- /.table-responsive -->
    </div>
    <!-- /.panel-body -->
  </div>
  <br>
</div>
