<h1>Company Parts</h1>

<table>
  <thead>
    <tr>
      <th>Company</th>
      <th>Part</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @company_parts.each do |company_part| %>
      <tr>
        <td><%= company_part.company %></td>
        <td><%= company_part.part %></td>
        <td><%= link_to 'Show', company_part %></td>
        <td><%= link_to 'Edit', edit_company_part_path(company_part) %></td>
        <td><%= link_to 'Destroy', company_part, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

