
<h1 class="page-header">Carros</h1>
<div class="panel panel-default">


  <div class="panel-heading">
    LISTANDO CARROS
    <%= link_to new_car_path, class:"btn btn-success btn-circle pull-right", style:"margin-top: -5px" do %>
    <i class="fa fa-plus"></i>
    <% end %>
  </div>
  <!-- /.panel-heading -->
  <div class="panel-body">
    <div class="table-responsive">
      <table class="table table-striped table-bordered table-hover">
        <thead>
          <tr>
            <th>#</th>
            <td>model</td>
            <td>maker</td>
            <td>year</td>
            <td>year_make</td>
            <th colspan="3"></th>
          </tr>
        </thead>
        <tbody>
         <% @cars.each do |car| %>
         <tr>
          <td style="width: 40px"><%= car.id %></td>
          <td><%= car.model %></td>
          <td><%= car.maker %></td>
          <td><%= car.year %></td>
          <td><%= car.year_make %></td>

          <td style="width: 150px"><%= link_to edit_car_path(car), class:"btn btn-primary btn-circle" do %>
            <i class="fa fa-edit"></i>
            <% end %>
            
            <%= link_to car_path(car), method: :delete, class: "btn btn-danger btn-circle", data:{confirm: t('messages.confirm_with', item: car.model)} do %>
            <i class="fa fa-minus"></i>
            <% end %>

          </tr>
          <% end %>

        </tbody>
      </table>
    </div>
    <!-- /.table-responsive -->
  </div>
  <!-- /.panel-body -->
</div>
<br>
</div>
<!-- /.col-lg-12 -->

