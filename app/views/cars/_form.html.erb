<h1 class="panel panel-header">
  <%= action_message %>
</h1>
<% if @car.errors.any? %>
<% @car.errors.full_messages.each do |message| %>
<div class="alert alert-danger alert-dismissable">
  <button type="button" class="close" data-dismiss="alert" aria-hidden="true">Ã—</button>
  <%= message %>.
</div>
<% end %>
<% end %>
<%= form_for  @car do |f| %>

<div class="panel panel-default">
  <div class="panel-heading">

  </div>
  <div class="panel-body">
    <div class="col-lg-6">
      <div class="form-group">
        <label>Model</label>
        <%= f.collection_select :model_id, Model.all, :id, :description , {prompt: "Select a model"}, {class: "form-control"} %>
      </div> 

      <div class="form-group">
        <label>Maker</label>
        <%= f.text_field :maker , class:"form-control", placeholder:"Ex: HB..."%>
      </div>
      
      <div class="form-group">
        <label>year</label>        
        <%= f.date_select :year,class:"form-control" %>
      </div>

      <div class="form-group">
        <label>year make</label>                
        <%= f.date_select :year_make, class:"form-control" %>
      </div>

      <button type="submit" class="btn btn-default">Salvar</button>
    </div>
  </div>
</div>
<% end %>

</div>








